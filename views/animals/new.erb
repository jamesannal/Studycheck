<h2>Add new animal</h2>
<hr>
<hr>

<form action="/studycheck/animals" method="post">
  <label> 
    Age:
    <input type="number" name="age" value="" min="0" max="100">
  </label>

  <label> 
    Species:
    <select name="species">
      <option value="cat">Cat</option>
      <option value="dog">Dog</option>
      <option value="monkey">Monkey</option>
      <option value="mouse">Mouse</option>
      <option value="rat">Rat</option>
    </select>
  </label>

  <label> 
    Date Arrived:
    <input type="text" name="date_arrived" placeholder="yyyy-mm-dd">
  </label>
  
  <label>
    Health Status:
    <select name="study_availability">
      <option value="healthy">Healthy</option>
      <option value="unhealthy">Unhealthy</option>
    </select>
  </label>
  <input type="submit" value="Add animal"/>
</form>

<hr>