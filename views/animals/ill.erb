<h1>Animals ready to see the "Doctor"</h1>

<table>
  <tr>
    <th>ID number</th>
    <th></th>
    <th>Age</th>
    <th></th>
    <th>Species</th>
    <th></th>
    <th>Date of Arrival on Site</th>
    <th></th>
    <th>Health Status</th>
    <th></th>
    <th>DOCTOR'S OFFICE</th>
  </tr>

  <% for animal in @animals %>
  <% if animal.study_availability != 'healthy' %>

  <tr>
    <td><%= animal.id %></td>
    <td>|</td>
    <td><%= animal.age %></td>
    <td>|</td>
    <td><%= animal.species %></td>
    <td>|</td>
    <td><%= animal.date_arrived %></td>
    <td>|</td>
    <td><%= animal.study_availability %></td>
    <td>|</td>
    <td><a href="/studycheck/animals/<%= animal.id %>">CHECK/ALTER</a></td>

  </tr>
  <% end %>
  <% end %>
</table>

